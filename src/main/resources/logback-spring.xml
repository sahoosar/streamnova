<configuration>
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="StreamNova"/>

    <!-- Directory for segregated log files (errors, datasource); create if missing -->
    <property name="LOG_DIR" value="logs"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Include %ex on next line so stack traces are attached to the log line that triggered them -->
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%t] [app=%property{appName}] %logger{36} - %msg%n%ex</pattern>
        </encoder>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>
                    message != null &amp;&amp;
                    (message.contains("AsynchronousCloseException") ||
                     (throwableProxy != null &amp;&amp; throwableProxy.getClassName().contains("AsynchronousCloseException")))
                </expression>
            </evaluator>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
    </appender>

    <!-- Errors-only file: all ERROR (and stack traces) in one place for easy tracking -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/streamnova-errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/streamnova-errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [app=%property{appName}] %logger{36} - %msg%n%ex</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Datasource/pool file: startup, pool creation, driver validation — easy to track connection issues -->
    <appender name="DATASOURCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/streamnova-datasource.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/streamnova-datasource.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [app=%property{appName}] %logger{36} - %msg%n%ex</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Suppress null messages from Apache Beam JDBC IO -->
    <logger name="org.apache.beam.sdk.io.jdbc" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!--appender-ref ref="ERROR_FILE"/-->
    </root>

    <logger name="com.di.streamnova" level="INFO"/>

    <!-- Datasource/pool: same events also go to streamnova-datasource.log for segregated tracking -->
    <logger name="com.di.streamnova.config.DataSourceStartupInitializer" level="INFO" additivity="true">
        <appender-ref ref="DATASOURCE_FILE"/>
    </logger>
    <logger name="com.di.streamnova.util.ConnectionPoolLogger" level="INFO" additivity="true">
        <appender-ref ref="DATASOURCE_FILE"/>
    </logger>
    <logger name="com.di.streamnova.util.HikariDataSource" level="INFO" additivity="true">
        <appender-ref ref="DATASOURCE_FILE"/>
    </logger>
    <logger name="com.zaxxer.hikari" level="WARN" additivity="true">
        <appender-ref ref="DATASOURCE_FILE"/>
    </logger>

    <!-- Pipeline config load (connection YAML) — useful with datasource issues -->
    <logger name="com.di.streamnova.config.PipelineConfigService" level="INFO" additivity="true">
        <appender-ref ref="DATASOURCE_FILE"/>
    </logger>

    <!-- Per-shard record counts -->
    <logger name="PerShard" level="INFO" additivity="true"/>

    <!-- Transaction events -->
    <logger name="com.di.streamnova.util.TransactionEventLogger" level="INFO" additivity="true"/>
    <logger name="com.di.streamnova.aspect.TransactionEventAspect" level="INFO" additivity="true"/>
</configuration>
